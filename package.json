{
  "name": "indent-from-context-menu",
  "displayName": "Indent from Context Menu",
  "description": "Adds to the context menu the ability to indent the selected code lines",
	"publisher": "hectoralvf",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.indentRight",
    "onCommand:extension.indentLeft"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.indentRight",
        "title": "Indent right"
      },
      {
        "command": "extension.indentLeft",
        "title": "Indent left"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.indentRight",
          "group": "CustomCommands@1",
          "when": "editorTextFocus && !editorReadonly"
        },
        {
          "command": "extension.indentLeft",
          "group": "CustomCommands@1",
          "when": "editorTextFocus && !editorReadonly"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
